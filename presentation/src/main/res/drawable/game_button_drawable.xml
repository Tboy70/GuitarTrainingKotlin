<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorGreyDark" />
            <corners android:radius="3dp" />
            <padding android:bottom="14dp" android:left="10dp" android:right="10dp" android:top="14dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/colorGreyDark" />
            <corners android:radius="3dp" />
            <padding android:bottom="14dp" android:left="10dp" android:right="10dp" android:top="14dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/button_disable_state" android:state_enabled="false" />
    <item android:drawable="@color/colorGrey" />

</selector>