<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:dialogTheme">@style/Theme.App.AppCompatDialogStyle</item>
    </style>

    <style name="Theme.App.AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item> <!-- that's the important bit -->
    </style>

    <!-- Toolbar -->
    <style name="ToolbarAppTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_very_big</item>
    </style>


    <!-- Generic -->
    <style name="GenericTitleText">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GenericSubTitleText">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="GenericBigButton">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <style name="GenericLittleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/game_button_drawable</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
