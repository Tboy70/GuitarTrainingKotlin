<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/view_user_programs_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/padding_top_bottom"
            android:paddingEnd="@dimen/padding_start_end"
            android:paddingStart="@dimen/padding_start_end"
            android:paddingTop="@dimen/padding_top_bottom">

        <TextView
                android:id="@+id/view_user_programs_list_item_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Programme théorique par défaut" />

        <TextView
                android:id="@+id/view_user_programs_list_item_nb_exercises"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/view_user_programs_list_item_name"
                tool:text="Nombre d'exercise : 6" />

        <TextView
                android:id="@+id/view_user_programs_list_item_total_duration_exercises"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/view_user_programs_list_item_nb_exercises"
                tool:text="Durée totale du programme, 30 minutes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>