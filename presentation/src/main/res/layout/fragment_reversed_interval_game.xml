<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragment_reversed_interval_game_toolbar"
            style="@style/ToolbarAppTheme"
            android:theme="@style/ToolbarAppTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:title="@string/toolbar_title_reversed_interval_game_list"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/fragment_reversed_interval_game_title"
            style="@style/GenericTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            android:text="@string/reversed_interval_game_title"
            app:layout_constraintTop_toBottomOf="@id/fragment_reversed_interval_game_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/fragment_reversed_interval_game_description"
            style="@style/GenericSubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/constraint_layout_margin_16"
            android:text="@string/reversed_interval_game_description"
            app:layout_constraintTop_toBottomOf="@id/fragment_reversed_interval_game_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/fragment_reversed_interval_game_question"
            style="@style/GenericSubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/constraint_layout_margin_16"
            android:text="@string/reversed_interval_game_question"
            app:layout_constraintTop_toBottomOf="@id/fragment_reversed_interval_game_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_reversed_interval_game_answers_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/margin_6"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_reversed_interval_game_question">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reversed_interval_answer_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_width_100"
            app:layout_constraintBottom_toTopOf="@id/reversed_interval_answer_3"
            app:layout_constraintEnd_toStartOf="@id/reversed_interval_answer_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reversed_interval_answer_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_width_100"
            app:layout_constraintBottom_toTopOf="@id/reversed_interval_answer_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/reversed_interval_answer_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reversed_interval_answer_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_width_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reversed_interval_answer_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reversed_interval_answer_1"
            app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reversed_interval_answer_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_width_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/reversed_interval_answer_3"
            app:layout_constraintTop_toBottomOf="@id/reversed_interval_answer_2"
            app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>