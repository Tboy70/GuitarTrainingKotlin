<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_degree_layout">

        <EditText
                android:id="@+id/first_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/first_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/first_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/first_degree_layout"
            app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/second_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/second_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/second_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_degree_answer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_degree_layout"
            app:layout_constraintEnd_toStartOf="@id/fourth_degree_layout">

        <EditText
                android:id="@+id/third_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/third_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/third_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/third_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fourth_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/third_degree_layout"
            app:layout_constraintTop_toBottomOf="@id/second_degree_layout"
            app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:id="@+id/fourth_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fourth_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/fourth_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fourth_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fifth_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_degree_layout"
            app:layout_constraintEnd_toStartOf="@id/sixth_degree_layout">

        <EditText
                android:id="@+id/fifth_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fifth_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/fifth_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fifth_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sixth_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fifth_degree_layout"
            app:layout_constraintTop_toBottomOf="@id/fourth_degree_layout"
            app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:id="@+id/sixth_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/sixth_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/sixth_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sixth_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sixth_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/seventh_degree_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/fifth_degree_layout"
            app:layout_constraintTop_toBottomOf="@id/fifth_degree_layout">

        <EditText
                android:id="@+id/seventh_degree_answer"
                android:layout_width="@dimen/degree_edit_text_width"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/seventh_degree_label"
                tools:ignore="Autofill,LabelFor"/>

        <TextView
                android:id="@+id/seventh_degree_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seventh_degree"
                android:textSize="@dimen/text_very_big"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seventh_degree_answer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>