<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/constraint_layout_margin_8">

    <Button
            android:id="@+id/view_custom_exercise_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/constraint_layout_margin_8"
            android:paddingEnd="@dimen/constraint_layout_margin_8"
            android:background="@drawable/choice_button_drawable"
            android:drawableEnd="@drawable/ic_dropdown_grey"
            android:text="@string/user_program_creation_type_exercise_text"
            android:textAllCaps="false"
            android:textColor="@color/colorGreyDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/view_custom_exercise_duration"
            style="@style/GenericSubTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/constraint_layout_margin_8"
            android:hint="@string/user_program_creation_duration_exercise_hint"
            app:layout_constraintTop_toBottomOf="@id/view_custom_exercise_type"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="Autofill,LabelFor" />

    <ImageView
            android:id="@+id/view_custom_exercise_delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"
            app:tint="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>