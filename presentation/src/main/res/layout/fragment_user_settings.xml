<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="@dimen/constraint_layout_margin_16"
                                                   android:paddingStart="@dimen/padding_start_end"
                                                   android:paddingEnd="@dimen/padding_start_end">

    <LinearLayout
            android:id="@+id/guitar_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_settings_guitar_mode"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_big"/>

        <Switch
                android:id="@+id/settings_guitar_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bass_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guitar_settings_layout">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_settings_bass_mode"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_big"/>

        <Switch
                android:id="@+id/settings_bass_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"/>

    </LinearLayout>

    <TextView
            android:id="@+id/suppress_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            android:text="@string/user_settings_suppress_account"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bass_settings_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>