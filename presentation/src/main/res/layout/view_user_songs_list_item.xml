<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tool="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingStart="@dimen/padding_start_end"
                                                   android:paddingTop="@dimen/padding_top_bottom"
                                                   android:paddingEnd="@dimen/padding_start_end"
                                                   android:paddingBottom="@dimen/padding_top_bottom">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/view_user_songs_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_very_big"
                tool:text="Square Hammer"/>

        <TextView
                android:id="@+id/view_user_songs_list_item_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_default"
                tool:text="Ghost"/>

        <TextView
                android:id="@+id/view_user_songs_list_item_last_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_songs_list_last_play"
                android:textSize="@dimen/text_default"
                tool:text="Joué la dernière fois : 28/09/2018"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/view_user_songs_list_item_nb_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/user_songs_list_nb_play"
                android:textSize="@dimen/text_default"
                tool:text="Joué : 56 fois"/>

        <TextView
                android:id="@+id/view_user_songs_list_item_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/user_songs_list_score"
                android:textSize="@dimen/text_default"
                tool:text="Note : 4.5"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>