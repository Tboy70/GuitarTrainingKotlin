<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/view_help_scale_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_help_scale_reminder"
            android:paddingStart="@dimen/constraint_layout_margin_16"
            android:paddingEnd="@dimen/constraint_layout_margin_16"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            android:textSize="@dimen/text_very_big"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/view_help_scale_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_help_scale_reminder"
            tools:text="Gamme pentatonique majeure"/>

    <TextView
            android:id="@+id/view_help_scale_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/constraint_layout_margin_16"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/view_help_scale_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/minor_melodic_scale_interval"/>

</androidx.constraintlayout.widget.ConstraintLayout>